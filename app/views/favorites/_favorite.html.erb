<% if work.favorited_by?(current_user) %>
	<li style="list-style:none;">
  		<%= link_to favorite_path(work, work_id: work.id), method: :delete, remote: true do %>
    		<i class="fa fa-heart" aria-hidden="true" style="color: red;"><%= work.favorites.count %></i>
  		<% end %>
	</li>
	<% else %>
	<li style="list-style:none;">
  		<%= link_to favorites_path(work_id: work.id), method: :post, remote: true do %>
    		<i class="far fa-heart" aria-hidden="true"><%= work.favorites.count %></i>
  		<% end %>
	</li>
<% end %>
