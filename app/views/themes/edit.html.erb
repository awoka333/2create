<div class="container">
    <div class="row">
        <div class="col-sm-8">
            <h2>登録情報の編集</h2>
        </div>
    </div>
    <%= form_with model: @user, url: user_path, local: true do |f| %>
        <div class="row">
            <div class="col-sm-8">
                <%= f.text_area :sentence %>
                <%= f.attachment_field :theme_image %>
            </div>
        </div>
    <% end %>
    <div class="row">
        <div class="col-sm-8">
            <%= link_to works_path(@activity.id) do %>
                <button type="button" class="btn btn-danger">テーマを更新する</button>
            <% end %>
        </div>
    </div>