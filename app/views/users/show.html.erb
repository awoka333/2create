      <!--  <div class="col-sm-11">-->
      <!--    <%#= link_to contact_path do %>-->
      <!--        <button type="button" class="btn btn-secondary">運営からのメッセージ</button>-->
      <!--    <%# end %>-->
      <!--  </div>-->
      <!--</div>-->
    </div>

  </div>
</div>
