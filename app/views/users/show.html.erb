<div class="container">
  <% if @theme.present? %>
    <div class="row">
      <%= render 'themes/theme_bar', theme: @theme %>
    </div>
  <% end %>
  <div class="row">

    <!--ここから真ん中のエリア-->
    <%# if user_signed_in? && { user.authority == 99 } %>
    <!--adminの専用画面リンク集-->
      <div class="col-sm-12 mt-4">
        <div class="row">
        <div class="col-sm-8">
          <h2>管理者専用ページリンク</h2>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <%= link_to users_path do %>
          <button type="button" class="btn btn-outline-info">会員一覧</button>
        <% end %>
        <%= link_to activities_modify_path do %>
          <button type="button" class="btn btn-outline-info ml-2 mr-2">サークル一覧</button>
        <% end %>
        <%= link_to new_theme_path do %>
          <button type="button" class="btn btn-outline-info">テーマ編集</button>
        <% end %>
      </div>
    <%# end %>
    <div class="col-sm-12 mt-4">
      <div class="row">
        <div class="col-sm-8">
          <h2>おすすめサークル</h2>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <% if @recommends.empty? %>
          <%= link_to activities_path do %>
            <button type="button" class="btn btn-info">サークルを探しにいく！</button>
          <% end %>
        <!--オススメテーブルにレコードがある場合、おすすめサークルをラストから最大3つ並べる-->
        <% else %>
          <% @activities.each do |activity| %>
            <table>
              <tr>
                <td>
                  <%= link_to activity_path(activity) do %>
                    <%= attachment_image_tag activity, :act_image, format: 'jpeg', size: "300x200" %>
                  <% end %>
                </td>
              </tr>
              <tr><td><%= activity.name %></td></tr>
            </table>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-8 mt-4">
      <div class="row mt-4">
        <div class="col-sm-8">
          <h2>あなたのサークル</h2>
        </div>
      </div>
      <% if @groups.present? %>
        <div class="row">
          <div class="col-sm-11 ml-4">
            <table>
              <tr>
                <th>サークル名</th>
                <th>ステータス</th>
                <th></th>
              </tr>
              <% @groups.each do |group| %>
                <tr>
                  <td><%= group.activity.name %></td>
                  <td><%= group.member_status %></td>
                  <td>
                    <% if group.member_status == '承認待ち' %>
                      <%= link_to group_path(group), method: :delete do %>
                        <button type="button" class="btn-sm btn btn-danger">申請取消</button>
                      <% end %>
                    <% elsif group.graduate_status == '卒業しない' %>
                      <%= link_to group_path(group, group_sort: 99), method: :patch do %>
                        <button type="button" class="btn-sm btn btn-danger">卒業依頼</button>
                      <% end %>
                    <% elsif group.graduate_status == '卒業依頼' %>
                      <%= link_to group_path(group, group_sort: 98), method: :patch do %>
                        <button type="button" class="btn-sm btn btn-info">卒業依頼取り消し</button>
                      <% end %>
                    <% elsif group.graduate_status == '卒業' %>
                        <p>卒業生</p>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="col-sm-11 ml-5 pl-5">
            <p>サークルに参加していません</p>
          </div>
        </div>
      <% end %>
    </div>

    <!--ここから右サイドのエリア-->
    <div class="col-sm-4 mt-4">
      <div class="row">
        <div class="col-sm-6">
          <h2>登録情報</h2>
        </div>
        <div class="col-sm-6 mt-1">
          <%= link_to edit_user_path(current_user) do %>
              <button type="button" class="btn-sm btn btn-secondary">編集する</button>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-11">
          <table>
            <tr>
              <td>ニックネーム</td>
              <td><%= current_user.name %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= current_user.email %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-sm-11 mb-4">
          <!--work_sortでパラメーター渡す-->
          <%= link_to works_path(work_sort: 1) do %>
              <button type="button" class="btn btn-info">あなたの作品をみる</button>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
