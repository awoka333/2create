<div class="container">
  <div class="row">
    <%= render 'themes/theme_bar', theme: @theme %>
  </div>
  <div class="row">

    <!--ここから真ん中のエリア-->
    <div class="col-sm-12 mt-4">
      <div class="row">
        <div class="col-sm-8">
          <h2>おすすめサークル</h2>
        </div>
      </div>
      <div class="row justify-content-center mt-3">
        <% if @recommends.count == 0 %>
          <%= link_to activities_path do %>
            <button type="button" class="btn btn-info">サークルを探しにいく！</button>
          <% end %>
        <!--オススメテーブルにレコードがある場合、おすすめサークルをラスト3つ並べる（数はコントローラ参照）-->
        <% else %>
          <% @activities.each do |activity| %>
            <table>
              <tr><td><%= attachment_image_tag activity, :act_image, format: 'jpeg', fallback: "no_image.jpg", size: "300x200" %></td></tr>
              <tr><td><%= activity.name %></td></tr>
            </table>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="col-sm-8 mt-4">
      <div class="row mt-4">
        <div class="col-sm-8">
          <h2>あなたのサークル</h2>
        </div>
      </div>
      <% if @groups.present? %>
        <div class="row">
          <div class="col-sm-11 ml-4">
            <table>
              <tr>
                <th>サークル名</th>
                <th>ステータス</th>
                <th></th>
              </tr>
              <% @groups.each do |group| %>
                <tr>
                  <td><%= group.activity.name %></td>
                  <td><%= group.member_status %></td>
                  <td>
                    <% if group.member_status == '承認待ち' %>
                      <%= link_to group_path(group), method: :delete do %>
                        <button type="button" class="btn-sm btn btn-danger">申請取消</button>
                      <% end %>
                    <% elsif group.member_status != '承認待ち' %>
                      <%= link_to group_path(group, order_sort: 99), method: :patch do %>
                        <button type="button" class="btn-sm btn btn-secondary">卒業依頼</button>
                      <% end %>
                    <% end %>
                  </td>
                </tr>
              <% end %>
            </table>
          </div>
        </div>
      <% else %>
        <div class="row">
          <div class="col-sm-11 ml-5 pl-5">
            <p>サークルに参加していません</p>
          </div>
        </div>
      <% end %>
    </div>

    <!--ここから右サイドのエリア-->
    <div class="col-sm-4 mt-4">
      <div class="row">
        <div class="col-sm-6">
          <h2>登録情報</h2>
        </div>
        <div class="col-sm-6 mt-1">
          <%= link_to edit_user_path(current_user) do %>
              <button type="button" class="btn-sm btn btn-secondary">編集する</button>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-11">
          <table>
            <tr>
              <td>ニックネーム</td>
              <td><%= current_user.name %></td>
            </tr>
            <tr>
              <td>メールアドレス</td>
              <td><%= current_user.email %></td>
            </tr>
          </table>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-sm-11 mb-4">
          <!--ordersortでパラメーター渡す-->
          <%= link_to works_path(order_sort: 3) do %>
              <button type="button" class="btn btn-info">あなたの作品をみる</button>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
