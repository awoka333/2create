<div class="container">
  <div class="row">

    <!--ここから真ん中のエリア-->
    <div class="col-sm-7">
      <div class="row">
        <div class="col-sm-8">
          <h2>おすすめサークル</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3 ml-4">
          <!--オススメテーブルにレコードがある場合、おすすめサークルをラスト3つ並べる（数はコントローラ参照）-->
          <% unless @recommends.nil? %>
            <% @recommends.each do |recommend| %>
              <table>
                <tr><%= attachment_image_tag recommend.activities, :image, format: 'jpeg', fallback: "no_image.jpg", size: "400x250" %></tr>
                <tr><%= recommend.activities.name %></tr>
                <tr><%= recommend.activities.to_create %></tr>
              </table>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-8">
          <h2>あなたのサークル</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3 ml-4">
          <% @activities.each do |activity| %>
            <table>
              <tr>
                <th>サークル名</th>
                <th>ステータス</th>
                <th></th>
              </tr>
              <tr>
                <td><%= activity.name %></td>
                <td><%= activity.belongs.status %></td>
                <td>
                  <% if activity.belongs.status == '承認待ち' %>
                    <%= link_to works_path do %>
                      <button type="button" class="btn btn-danger">申請取消</button>
                    <% end %>
                  <% elsif activity.belongs.status != '承認待ち' %>
                    <%= link_to works_path do %>
                      <button type="button" class="btn btn-info">卒業依頼</button>
                    <% end %>
                  <% end %>
                </td>
              </tr>
            </table>
          <% end %>
        </div>
      </div>
    </div>

    <!--ここから右サイドのエリア-->
    <div class="col-sm-4">
      <div class="row">
        <div class="col-sm-11">
          <h2>登録情報</h2>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-11">
          <table>
            <tr>ニックネーム</tr>
            <tr><%= current_user.name %></tr>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-11">
          <table>
            <tr>メールアドレス</tr>
            <tr><%= current_user.email %></tr>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-11">
          <%= link_to user_edit_path do %>
              <button type="button" class="btn btn-secondary">編集する</button>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-11">
          <%= link_to user_edit_path do %>
              <button type="button" class="btn btn-secondary">あなたの作品をみる</button>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-11">
          <%= link_to contact_path do %>
              <button type="button" class="btn btn-secondary">運営へのお問い合わせ</button>
          <% end %>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-11">
          <%= link_to contact_path do %>
              <button type="button" class="btn btn-secondary">運営からのメッセージ</button>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
