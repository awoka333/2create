<div class="container">
  <div class="row">
    <div class="col-sm-12">

      <div class="row">
        <div class="col-sm-8">
          <h2>サークル一覧</h2>
        </div>
      </div>
      <!--サークル一覧を表示w-->
      <div class="row">
        <div class="col-sm-3 ml-4">
          <table class="table table-hover table-inverse">
            <thead>
              <tr>
                <th>サークル名</th>
                <th>メンバー数</th>
                <th colspan="3"></th>
              </tr>
            </thead>
            <tbody>
              <% @activities.each do |activity| %>
              <tr>
                <td><%= link_to activity.name, activity_path(activity) %></td>
                <td><%= activity.user.count %>人</td>
                <td>
                  <%= link_to activities_path do %>
                    <button type="button" class="btn btn-danger">作品一覧</button>
                  <% end %>
                </td>
                <td>
                  <%= link_to activity_path(activity.id), method: :delete do %>
                    <button type="button" class="btn btn-danger">削除</button>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-12">
          <p><%= paginate @activities_paginate %></p>
        </div>
      </div>
    </div>
    <div class="col-sm-4">
      <div class="row">
        <div class="col-sm-12">
          <%= link_to new_activity_path do %>
            <button type="button" class="btn btn-danger">サークル新規作成</button>
          <% end %>
        </div>
      </div>
    </div>

  </div>
</div>
