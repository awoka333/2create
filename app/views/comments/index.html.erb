<div class="container">
  <div class="row">
    <div class="col-sm-12 mt-5">
      <h2>コメント送信</h2>
    </div>
  </div>

  <%= form_with model: @comment, url: comments_path(activity_id: @activity.id), remote: true do |f| %>
    <div class="row">
      <%= render 'layouts/error_messages', model: f.object %>
    </div>
    <div class="row mt-3 justify-content-center">
      <div class="col-sm-8 text-center", id="textarea">
        <%= f.text_area :sentence, placeholder: "コメントをここに入力", size: "80x10" %>
      </div>
      <div class="col-sm-12 mt-1 mb-3 text-center">
        <%= f.submit "コメントする", class: "btn-sm btn btn-secondary" %>
      </div>
    </div>
  <% end %>

  <div id="comments_area">
    <%= render partial: 'comments/index', locals: { comments: @comments, activity: @activity } %>
  </div>

  <div class="row">
    <div class="col-sm-12">
      <p><%= paginate @comments %></p>
    </div>
  </div>
</div>
