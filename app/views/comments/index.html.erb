<div class="container">
  <div class="row">
    <div class="col-sm-12">
      <h2>コメント</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <% @comments.each do |comment| %>
        <table>
          <tr>
            <td>
              <%= comment.sentence %>
              <br>
              <%= link_to "編集", edit_comment_path(comment) %> | <%= link_to "削除", comment_path(comment), method: :delete, class: "link-danger" %>
            </td>
            <td><%= comment.user.name %> <%= comment.created_at %></td>
          </tr>
        </table>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <h2>コメント送信</h2>
    </div>
  </div>
  <div class="row">
    <%= form_with model: @comment, url: comments_path(activity_id: @activity.id), local: true do |f| %>
      <div class="col-sm-8">
        <%= f.text_area :sentence, placeholder: "コメントをここに入力" %>
      </div>
      <div class="col-sm-4">
        <%= f.submit "コメントする", class: "btn-sm btn btn-secondary" %>
      </div>
    <% end %>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <p><%= paginate @comments_paginate %></p>
    </div>
  </div>
</div>
