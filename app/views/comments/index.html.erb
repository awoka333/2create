<div class="container">
  <div class="row">
    <div class="col-sm-12 pt-4">
      <h2>コメント送信</h2>
    </div>
  </div>

  <%= form_with model: @comment, url: comments_path(activity_id: @activity.id), local: true do |f| %>
    <div class="row">
      <%= render 'layouts/error_messages', model: f.object %>
    </div>
    <div class="row mt-3 justify-content-center">
      <div class="col-sm-8 text-center">
        <%= f.text_area :sentence, placeholder: "コメントをここに入力", size: "80x10" %>
      </div>
      <div class="col-sm-12 mt-1 mb-3 text-center">
        <%= f.submit "コメントする", class: "btn-sm btn btn-secondary" %>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-12 mt-4">
      <h2><%= @activity.name %> コメント一覧</h2>
    </div>
    <div class="col-sm-12 mt-4">
      <%= link_to activity_path(@activity) do %>
        <button type="button" class="btn btn-dark">サークルページに戻る</button>
      <% end %>
    </div>
  </div>
  <% if @comments.nil? %>
    <div class="row">
      <div class="col-sm-12 mt-4">
        <p>コメントはありません</p>
      </div>
    </div>
  <% else %>
    <div class="row">
      <div class="col-sm-12 pl-4">
        <table class="table table-inverse">
          <% @comments.each do |comment| %>
            <tr>
              <td>
                <%# if user_signed_in? && current_user.authority == "管理者" %>
                  <span class="sentence-score">本文の感情分析スコア<%= comment.score %></span>
                <%# end %>
                <%= comment.sentence %>
                <% if comment.user == current_user %>
                  <br>
                  <%= link_to "編集", edit_comment_path(comment) %> | <%= link_to "削除", comment_path(comment), method: :delete, class: "link-danger" %>
                <% end %>
              </td>
              <td><%= comment.user.name %></td>
              <td><%= comment.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  <% end %>

  <div class="row">
    <div class="col-sm-12">
      <p><%= paginate @comments %></p>
    </div>
  </div>
</div>
