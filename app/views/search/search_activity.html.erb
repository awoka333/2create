<% if @q.present? %>
  <div class="container">
    <div class="row">
      <div class="col-sm-8 mt-4">
        <h2><%= @q.name_cont %>を含むサークル一覧</h2>
      </div>
      <% if user_signed_in? %>
        <div class="col-sm-4 mt-4">
          <%= link_to new_activity_path do %>
            <button type="button" class="btn btn-secondary">サークルをつくる</button>
          <% end %>
        </div>
      <% end %>
    </div>

    <% if @activities.nil? %>
      <div class="row">
        <div class="col-sm-11 ml-4 mt-3 mb-5">
          <p>サークルはありません</p>
        </div>
      </div>
    <% else %>
      <!--サークル一覧を表示w-->
      <div class="row">
        <div class="col-sm-11 ml-4">
          <table class="table table-hover table-inverse">
            <thead>
              <tr class="table-dark">
                <th></th>
                <th>サークル名</th>
                <th>メンバー数</th>
                <th>作るもの</th>
                <th>勉強すること</th>
              </tr>
            </thead>
            <tbody>
              <% @activities.each do |activity| %>
                <tr>
                  <td>
                    <%= link_to activity_path(activity) do %>
                      <%= attachment_image_tag activity, :act_image, format: 'jpeg', fallback: "no-image.jpg", size: '50x50' %>
                    <% end %>
                  </td>
                  <td class="align-middle"><%= link_to activity.name, activity_path(activity) %></td>
                  <td class="align-middle"><%= activity.groups.count %>人</td>
                  <td class="align-middle"><%= activity.to_create %></td>
                  <td class="align-middle"><%= activity.to_study %></td>
                </tr>
                <% end %>
            </tbody>
          </table>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-12">
          <p><%= paginate @activities_paginate %></p>
        </div>
      </div>
    <% end %>
  </div>
<% else %>
  <div class="container">
  <div class="row">
    <div class="col-sm-8 mt-4">
      <h2><%= @w.title_cont %>を含む作品一覧</h2>
    </div>
  </div>
  <% unless @works.count > 0 %>
    <div class="row">
      <div class="col-sm-11 ml-4 mt-3 mb-5">
        <p>作品はありません</p>
      </div>
    </div>
  <% else %>
    <div class="row">
      <!--2個横並びで折り返す-->
      <% @works.each do |work| %>
        <div class="col-sm-6">
          <table>
            <tr>
              <td colspan="2", style="width:100%", class="text-center">
                <%= link_to work_path(work) do %>
                  <%= attachment_image_tag work, :work_image, format: 'jpeg', size: "300x200" %>
                <% end %>
              </td>
            </tr>
            <tr>
              <td style="width:80%", class="text-center"><%= work.title %></td>
              <% if user_signed_in? %>
                <td id="favorite-<%= work.id %>", style="width:20%"><%= render 'favorites/favorite', work: work %></td>
              <% end %>
            </tr>
            <tr><td style="width:100%", class="text-center"><%= work.activity.name %></td></tr>
          </table>
        </div>
      <% end %>
    </div>
    <div class="row">
      <div class="col-sm-12">
        <p><%= paginate @works_paginate %></p>
      </div>
    </div>
  <% end %>
</div>
<% end %>